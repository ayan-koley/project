<% layout("/layouts/boilerplate") %>

<div class="py-3 row">
  <div class="col-8 offset-2">
    <form
      method="post"
      action="/listings"
      class="needs-validation"
      novalidate
      enctype="multipart/form-data"
    >
      <div class="py-2">
        <label for="title" class="form-label fw-bold">Title</label>
        <input
          type="text"
          name="listing[title]"
          class="form-control"
          placeholder="Add a Catchy title"
          required
        />
        <div class="invalid-feedback">Enter title</div>
      </div>
      <div class="py-2">
        <label for="description" class="form-label fw-bold">Description</label>
        <textarea
          name="listing[description]"
          id="textArea"
          class="form-control"
        ></textarea>
      </div>
      <div class="py-2">
        <label for="image" class="form-label fw-bold">Image</label>
        <input type="file" name="listing[image]" class="form-control" />
      </div>
      <div class="row py-2">
        <div class="col-4">
          <label for="price" class="form-label fw-bold">Price</label>
          <input
            type="number"
            name="listing[price]"
            class="form-control"
            placeholder="1200"
            required
          />
          <div class="invalid-feedback">Enter Price</div>
        </div>
        <div class="col-8">
          <label for="location" class="form-label fw-bold">Location</label>
          <input
            type="text"
            name="listing[location]"
            class="form-control"
            placeholder="West-Bengal, Howrah"
          />
        </div>
      </div>
      <div class="py-2">
        <label for="country" class="form-label fw-bold">Country</label>
        <input
          type="text"
          name="listing[country]"
          class="form-control"
          placeholder="India"
        />
      </div>
      <button class="btn btn-dark my-3 add-btn">Submit!</button>
    </form>
  </div>
</div>
